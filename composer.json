{
  "name": "kasparsd/hello-dolly-with-tests",
  "description": "An example of how to add PHP unit tests and coding standard checks to legacy WordPress plugins",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "10up/wp_mock": "^0.2.0",
    "wp-coding-standards/wpcs": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0"
  },
  "config": {
    "platform": {
      "php": "5.6"
    }
  },
  "scripts": {
    "lint": "phpcs .",
    "test": "phpunit --bootstrap tests/bootstrap.php tests/test-hello-dolly.php"
  }
}
